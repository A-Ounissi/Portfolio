---
import { siteConfig } from "../config";
---

<section id="about" class="py-24 bg-gray-50">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="lg:grid lg:grid-cols-12 lg:gap-16 items-start">
      <div class="lg:col-span-4 mb-10 lg:mb-0">
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
          About Me
        </h2>
        <div class="h-1 w-20 bg-blue-600 mt-4 rounded-full"></div>
      </div>

      <div class="lg:col-span-8">
        <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100">
          <p class="text-lg leading-8 text-gray-600 mb-8">
            {siteConfig.aboutMe}
          </p>

          <div>
            <h3 class="text-sm font-semibold text-gray-900 tracking-wider uppercase mb-4">
              Skills & Technologies
            </h3>
            <div class="flex flex-wrap gap-2">
              {
                siteConfig.skills.map((skill) => (
                  <span class="inline-flex items-center px-3 py-1 rounded-md text-sm font-medium bg-blue-50 text-blue-700 ring-1 ring-inset ring-blue-700/10 hover:bg-blue-100 transition-colors duration-200 cursor-default">
                    {skill}
                  </span>
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
