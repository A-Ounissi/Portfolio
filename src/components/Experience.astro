---
import { siteConfig } from "../config";
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
---

{
  hasExperience && (
    <section id="experience" class="py-24 bg-gray-50">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="lg:grid lg:grid-cols-12 lg:gap-16 items-start">
          <div class="lg:col-span-4 mb-10 lg:mb-0">
            <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
              Experience
            </h2>
            <div class="h-1 w-20 bg-blue-600 mt-4 rounded-full"></div>
          </div>

          <div class="lg:col-span-8">
            <div class="relative space-y-12">
              {/* Vertical line */}
              <div class="absolute left-0 top-2 bottom-2 w-px bg-gray-200 ml-4 md:ml-0 md:left-8"></div>

              {siteConfig.experience.map((exp, index) => (
                <div class="relative pl-12 md:pl-24">
                  {/* Dot */}
                  <div class="absolute left-0 top-2 w-8 h-8 rounded-full bg-white border-4 border-blue-100 flex items-center justify-center md:left-4">
                    <div class="w-2.5 h-2.5 rounded-full bg-blue-600"></div>
                  </div>

                  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-4">
                    <div>
                      <h3 class="text-lg font-bold text-gray-900">
                        {exp.title}
                      </h3>
                      <p class="text-base font-medium text-blue-600">
                        {exp.company}
                      </p>
                    </div>
                    <span class="text-sm font-mono text-gray-500 mt-1 sm:mt-0 bg-gray-100 px-2 py-1 rounded">
                      {exp.dateRange}
                    </span>
                  </div>

                  <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100 hover:shadow-md transition-shadow duration-300">
                    <ul class="space-y-3">
                      {exp.bullets.map((bullet) => (
                        <li class="flex items-start">
                          <svg class="w-5 h-5 text-blue-500 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                          </svg>
                          <span class="text-gray-600 text-base leading-relaxed">
                            {bullet}
                          </span>
                        </li>
                      ))}
                    </ul>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
