---
import { siteConfig } from "../config";
const hasEducation = siteConfig.education && siteConfig.education.length > 0;
---

{
  hasEducation && (
    <section id="education" class="py-24 bg-white">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="lg:grid lg:grid-cols-12 lg:gap-16 items-start">
          <div class="lg:col-span-4 mb-10 lg:mb-0">
            <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
              Education
            </h2>
            <div class="h-1 w-20 bg-blue-600 mt-4 rounded-full"></div>
          </div>

          <div class="lg:col-span-8">
            <div class="space-y-8">
              {siteConfig.education.map((edu) => (
                <div class="group relative bg-gray-50 rounded-2xl p-8 border border-gray-100 hover:border-blue-100 hover:shadow-lg transition-all duration-300">
                  <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-6">
                    <div>
                      <h3 class="text-xl font-bold text-gray-900 group-hover:text-blue-600 transition-colors">
                        {edu.degree}
                      </h3>
                      <p class="text-lg text-gray-600 mt-1">
                        {edu.school}
                      </p>
                    </div>
                    <span class="text-sm font-mono text-gray-500 mt-2 sm:mt-0 bg-white px-3 py-1 rounded-full border border-gray-200">
                      {edu.dateRange}
                    </span>
                  </div>

                  {edu.achievements && edu.achievements.length > 0 && (
                    <div class="border-t border-gray-200 pt-6 mt-2">
                       <ul class="space-y-2">
                        {edu.achievements.map((achievement) => (
                          <li class="flex items-center text-gray-600">
                            <span class="w-1.5 h-1.5 rounded-full bg-blue-500 mr-3"></span>
                            {achievement}
                          </li>
                        ))}
                      </ul>
                    </div>
                  )}
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
